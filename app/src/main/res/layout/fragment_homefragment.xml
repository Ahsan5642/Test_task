<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homefragment"
    android:background="#FDFDFD">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/site"
        android:scaleType="centerCrop"
        android:contentDescription="TODO"
        android:background="@drawable/gradient"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient" />

    <SearchView
        android:id="@+id/search_View"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:textAlignment="center"
        android:iconifiedByDefault="false"
        android:queryHint="Search Products"
        />


    <ScrollView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="210dp"
            android:text="Our Categories"
            android:textColor="#121015"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="250dp"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:scaleType="centerCrop"
                android:src="@drawable/img1"
                android:contentDescription="TODO"
                android:layout_marginBottom="5dp"/>


            <ImageButton
                android:id="@+id/imagebtn2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:background="#ffffff"
                android:scaleType="centerCrop"
                android:src="@drawable/img2" />

            <ImageButton
                android:id="@+id/imagebtn3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:background="#ffffff"
                android:scaleType="centerCrop"
                android:src="@drawable/img3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="400dp"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageButton
                android:layout_marginBottom="5dp"
                android:id="@+id/image4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:scaleType="centerCrop"
                android:src="@drawable/img4" />


            <ImageButton
                android:id="@+id/imagebtn5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:background="#ffffff"
                android:scaleType="centerCrop"
                android:src="@drawable/img5" />

            <ImageButton
                android:id="@+id/imagebtn6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:background="#ffffff"
                android:scaleType="centerCrop"
                android:src="@drawable/img6"
                android:contentDescription="TODO" />

        </LinearLayout>

        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="550dp"
            android:layout_marginLeft="25dp"
            android:text="Trending Products"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="580dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="50dp"
            >
        <ImageButton
            android:id="@+id/imagebtnn"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp"
            android:background="#ffffff"
            android:src="@drawable/imgbtn2"
            />
        <ImageButton
            android:id="@+id/imagebtnnn1"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="#ffffff"
            android:src="@drawable/imgbtn3"
            android:layout_marginLeft="10dp"

            />
            <ImageButton
                android:id="@+id/imagebtnnn2"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"

                android:background="#ffffff"
                android:src="@drawable/imgbtn4"

                />
            <ImageButton
                android:id="@+id/imagebtnnn3"
                android:layout_width="110dp"
                android:layout_marginLeft="10dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="#ffffff"
                android:src="@drawable/imgbtn5"

                />
            <ImageButton
                android:id="@+id/imagebtnnn4"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:background="#ffffff"
                android:src="@drawable/imgbtn6"

                />
        </LinearLayout>
    </HorizontalScrollView>

        </RelativeLayout>

    </ScrollView>
</FrameLayout>